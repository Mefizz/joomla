<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Informer, Users visits</name>
    <author>Andrii Kopylets</author>
    <version>1.0.0</version>
    <description>Page view counter</description>
    <files>
        <filename>mod_infouser.xml</filename>
        <filename module="mod_infouser">mod_infouser.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="phrase"
                        type="text"
                        default="Welcome"
                        label="Message"
                        description="MOD_INFO_USER_DEF_PHRAZE_DESC"/>
                <field
                        name="timer"
                        type="text"
                        default="50000"
                        label="Interval time value"
                        description="MOD_INFO_USER_DEF_TIMER_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
